/* 基本资料界面 */
.show{
  margin-top: 30px;
  border: solid;
  border-color: #24e;
  width: 96%;
  border-radius: 10px;
  text-align: center;  
}
.show_id{
   display: flex;
   flex-direction: row;
   margin: 25px;
   font-size: 14px;
}
.show_id text{
  width:40%;
  text-align: left;  
  margin-left: 18px;
  margin-top: 6px;
}
.show_id input{ 
  width:100%;
  height:5px; 
  color: black;
  border: solid;
  border-color: gray;
  border-radius: 5px; 
  margin-right: 20px; 
  text-align: center;
}
/* 修改资料界面 */
